<%- include('partials/header') %>
<div class="container centered">

  <div class="row">
    <div class="col-sm-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
      <h1 class="mb-4 title">Create a New Account</h1>
      <div class="card px-md-5">
        <div class="card-body">
          <div class="card-title text-center">
            <span>Fill out this form</span>
          </div>

          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control form-control-lg inputEmail" name="username" autocomplete="off">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control form-control-lg inputPass" name="password">
            </div>
            <!-- <div class="form-group">
              <label for="retype-password">Re-type Password</label>
              <input type="password" class="form-control form-control-lg inputRetypePass" name="retypePassword">
            </div> -->
            <button type="submit" class="btn-lg btnLogin mt-3 mb-4">Sign Up</button>
            <a class="btn-lg btnSignUpWithGoogle button" href="/auth/google" role="button">
              <i class="fab fa-google"></i>
              Continue with Google
            </a>
            <div class="login text-center">
              <p class="mt-4">Already have an account? <a href="/login" class="signUp"> Login</a></p>
            </div>
          </form>

        </div>
      </div>
    </div>

