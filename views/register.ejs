<%- include('partials/header') %>
<div class="container centered">

  <div class="row">
    <div class="col-sm-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
      <h1 class="mb-4 title">Create a New Account</h1>
      <div class="card px-md-3">
        <div class="card-body">
          <div class="card-title text-center">
            <span>Fill out this form</span>
          </div>
          <form action="/register" method="POST">
            <div class="form-group">
              <input type="email" class="form-control form-control-lg inputEmail text-center" placeholder="Enter your email" name="username" autocomplete="off">
              <input type="password" class="form-control form-control-lg inputPass text-center mt-4" placeholder="Enter your password" name="password">
            </div>
            <button type="submit" class="btn-lg btnLogin mt-2 mb-4">Sign Up</button>
            <a class="btn-lg btnSignUpWithGoogle button" href="/auth/google" role="button">
              <i class="fab fa-google"></i>
              Continue with Google
            </a>
            <div class="login text-center">
              <p class="mt-2">Already have an account? <a href="/login" class="signUp"> Login</a></p>
            </div>
          </form>

        </div>
      </div>
      <p class="mt-3 copy">
        &copy; Niks Nilo <%= year %> | MongoDB, Mongoose, Node.js, Express.
      </p>
    </div>

